pkgname=slingshot
pkgver=0.8.1p
pkgrel=1
pkgdesc="A two dimensional strategy/simulation game set in the gravity fields of several planets."
url="http://www.slingshot-game.org/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('python' 'python-pygame')
source=(http://downloads.sourceforge.net/slingshot-game/Slingshot-$pkgver-linux.tar.gz)
md5sums=('cdfcf0c85dc7d1b203344c24f591e7b5')

build() {

	#Install the package	
	cd $srcdir/Slingshot-$pkgver-linux
	tar xf slingshot_files.tar.gz
	install -d -m755 $pkgdir/usr/share/ $pkgdir/usr/bin/
	cp -r slingshot $pkgdir/usr/share/
	cp readme $pkgdir/usr/share/slingshot/

	#Install the .desktop and icon files
	sed -i 's,/opt/,/usr/share/,' slingshot.desktop
	install -Dm0644 slingshot.desktop $pkgdir/usr/share/applications/slingshot.desktop

	#Install the bin file
	sed 's,/opt/,/usr/share/,' sling > $pkgdir/usr/bin/slingshot
	chmod a+x $pkgdir/usr/bin/slingshot
  
}
