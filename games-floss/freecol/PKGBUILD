# Contributor: Johannes Sjolund "wulax" <j.sjolund@gmail.com>

pkgname=freecol
pkgver=0.7.3
pkgrel=1
pkgdesc="Turn-based strategy game based on the game Colonization"
arch=('i686' 'x86_64')
url="http://www.freecol.org/"
license="GPL"
depends=('jre')
source=(http://dl.sourceforge.net/sourceforge/freecol/$pkgname-$pkgver.tar.gz \
	$pkgname.sh $pkgname.desktop)
md5sums=('57600a0437091d65e220ee3ba2fb69fb' 'd0bf043f05dfc51cc9c1f5e169bc1316'\
	 'f471d4fd3624d9b45aa3e16e40f2faef')

build() {
  cd $srcdir/$pkgname
  
  install -D -m644 FreeCol.jar $pkgdir/usr/share/java/$pkgname/FreeCol.jar
  cp -R jars $pkgdir/usr/share/java/$pkgname
  mkdir -p $pkgdir/usr/share/$pkgname
  cp -R data $pkgdir/usr/share/$pkgname
  install -D -m755 $srcdir/$pkgname.sh $pkgdir/usr/bin/$pkgname

  install -D -m644 $srcdir/$pkgname/$pkgname.xpm $pkgdir/usr/share/pixmaps/$pkgname.xpm
  install -D -m644 $srcdir/$pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop

  install -D -m644 COPYING $pkgdir/usr/share/licenses/$pkgname/COPYING
}
