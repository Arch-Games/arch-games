# Maintainer: Juan Matias Granda <insulae@gmail.com>

pkgname=goonies
pkgver=1.0.1
pkgrel=1
pkgdesc="A remake of the MSX Goonies game"
arch=(i686 x86_64)
url="http://goonies.jorito.net/"
license=('none')

depends=('sdl_image' 'sdl_mixer' 'sdl_sound' 'libgl')
makedepends=('')

source=(http://goonies.jorito.net/download/goonies_r1-0-1.tgz)
srcname=goonies_r1-0-1
md5sums=('1b949eda5cc57ebe2cb95ede67bfb467')

build() {
	mkdir -p $startdir/pkg/usr/share/goonies/	
	mkdir -p $startdir/pkg/usr/bin/
	cd $startdir/src/$srcname/src
	cp ../build/linux/Makefile .
	make || return 1
	cp goonies $startdir/pkg/usr/share/goonies/
	cp -r ../graphics ../mapeditor ../maps ../sound $startdir/pkg/usr/share/goonies/
	echo "#!/bin/bash" > $startdir/pkg/usr/bin/goonies
	echo "cd /usr/share/goonies/" >> $startdir/pkg/usr/bin/goonies
	echo "exec /usr/share/goonies/goonies" >> $startdir/pkg/usr/bin/goonies
	chmod 755 $startdir/pkg/usr/bin/goonies
}