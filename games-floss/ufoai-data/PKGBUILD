pkgname=ufoai-data
pkgver=2.2
pkgrel=2
pkgdesc="UFO: Alien Invasion data"
arch=('i686' 'x86_64')
url="http://ufoai.sourceforge.net/"
license=('GPL')
depends=()
source=(http://downloads.sourceforge.net/sourceforge/ufoai/ufoai-$pkgver-data.tar)
