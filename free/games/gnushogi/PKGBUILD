# Contributor: Daenyth <Daenyth+Arch AT gmail DOT com>
pkgname=gnushogi
pkgver=1.3.2
pkgrel=1.1
pkgdesc="A program that plays Shogi (Japanese chess). Also includes xshogi"
arch=('i686' 'x86_64')
url="http://www.cs.caltech.edu/~mvanier/hacking/gnushogi/gnushogi.html"
license=('GPL')
provides=(xshogi=$pkgver)
depends=('ncurses' 'termcap-compat')
makedepends=()
source=(http://www.cs.caltech.edu/~mvanier/hacking/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('a18eae93afc89bfd368ed5f6768be791')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make prefix="$pkgdir/usr" install
}

# vim:set ts=2 sw=2 et:
