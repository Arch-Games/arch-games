# Contributor: Berkus <berkus+arch@madfire.net>

pkgname=cg-toolkit
pkgver=2.0
pkgrel=1
pkgdesc="NVIDIA Cg shader toolkit"
url="http://developer.nvidia.com/object/cg_toolkit.html"
arch=('i686' 'x86_64')
license=('NVIDIA')
source=(http://developer.download.nvidia.com/cg/Cg_2.0/2.0.0015/Cg-${pkgver}_May2008_x86.tgz)
noextract=(Cg-${pkgver}_May2008_x86.tgz)
md5sums=('311069e73186b3a7837d35df08b714c8')
[ "$CARCH" = "x86_64" ] && source=(http://developer.download.nvidia.com/cg/Cg_2.0/2.0.0015/Cg-${pkgver}_May2008_x86_64.tgz)
[ "$CARCH" = "x86_64" ] && noextract=(Cg-${pkgver}_May2008_x86_64.tgz)
[ "$CARCH" = "x86_64" ] && md5sums=('f0923e9fe9c0e0f1b1f49e9069c59815')

build() {

    cd $pkgdir
    bsdtar -x -f $srcdir/$noextract || return 1
	rm -r $pkgdir/usr/share
	rm -r $pkgdir/usr/local
	
}
