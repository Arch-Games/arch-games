# Maintainer: Daniel J Griffiths <griffithsdj@ghost1227.com>

pkgname=openlierox
pkgver=0.57_beta5
pkgrel=2
pkgdesc="A real-time, excessive worms-clone"
arch=('i686' 'x86_64')
url="http://openlierox.sourceforge.net/"
license=('LGPL2')
depends=('gcc-libs' 'gd' 'hawknl' 'libxml2' 'sdl_image' 'sdl_mixer')
source=(http://downloads.sourceforge.net/sourceforge/openlierox/OpenLieroX_$pkgver.src.tar.bz2 openlierox.desktop)
md5sums=('f55a06b61e08f6f8aafef71d3f9808aa' '136be76151864d154051455d75dc813e')

build() {
  cd $srcdir/OpenLieroX
  ./compile.sh || return 1
  mkdir -p $pkgdir/usr/bin
  cp bin/openlierox $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/OpenLieroX
  cp -r share/gamedir/* $pkgdir/usr/share/OpenLieroX/
  mkdir -p $pkgdir/usr/share/applications
  cp $startdir/openlierox.desktop $pkgdir/usr/share/applications
}
