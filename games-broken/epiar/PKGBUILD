# Contributor: Hugo Ideler <hugoideler@dse.nl>

pkgname=epiar
pkgver=0.5.0
pkgrel=1
pkgdesc="A space adventure/combat game written in C with SDL"
url="http://epiar.net/"
license="GPL"
depends=(sdl sdl_ttf sdl_image libvorbis)
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://dl.sourceforge.net/sourceforge/epiar/$pkgname-$pkgver-src.zip epiar-wrapper)
md5sums=('5f9bef3bfbd758d9a2937acf9a91e77f' 'd2f3b6e586a11accf47d27652c0884a6')

build() {
  cd $startdir/src/
  make -f Makefile.linux || return 1
  install -D -m755 epiar-wrapper $startdir/pkg/usr/bin/epiar
  install -d -m755 $startdir/pkg/usr/lib/epiar $startdir/pkg/usr/lib/epiar/missions
  install -D -m755 epiar $startdir/pkg/usr/lib/epiar/epiar
  cp -r *.eaf $startdir/pkg/usr/lib/epiar/
  cp -r missions/*.eaf $startdir/pkg/usr/lib/epiar/missions/

}
