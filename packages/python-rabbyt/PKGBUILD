pkgname=python-rabbyt
pkgver=0.8.2
pkgrel=2
pkgdesc="A sprite library for Python targeting game development"
arch=('i686' 'x86_64')
url="http://matthewmarshall.org/projects/rabbyt/"
license=('LGPL')
depends=('python' 'libgl' 'mesa')
makedepends=('pyrex' 'setuptools')
source=(http://cheeseshop.python.org/packages/source/R/Rabbyt/Rabbyt-$pkgver.tar.gz)
md5sums=('b8a90d1793ce37fdac47f54aa08a94f4')

build() {
  cd Rabbyt-$pkgver
  python setup.py build || return 1
  python setup.py install --root "$pkgdir"
}
