_pkgsourcename=libglade
pkgname=lib32-libglade
pkgver=2.6.2
pkgrel=1
license=('GPL')
depends=('lib32-gtk2' 'lib32-libxml2')
pkgdesc="Allows you to load glade interface files in a program at runtime"
arch=(x86_64)
url="http://xorg.freedesktop.org/"
groups=lib32
source=(ftp://ftp.ibiblio.org/pub/linux/distributions/archlinux/extra/os/i686/${_pkgsourcename}-${pkgver}-${pkgrel}.pkg.tar.gz)
md5sums=(544f6f04d9ae426e2c9526ca87641af4)

build() {
  mkdir -p $startdir/pkg/opt/lib32/usr/
  cp -rPf $startdir/src/usr/lib $startdir/pkg/opt/lib32/usr/lib
}
