pkgname=lib32-libogg
pkgver=1.1.3
pkgrel=1
pkgdesc="Ogg bitstream and framing library"
url="http://www.xiph.org/ogg/vorbis/download"
arch=('x86_64')
license=('GPL')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}.pkg.tar.gz)
md5sums=('5d929087395e0d7c27507f2ba0703fdd')

build() {

	mkdir -p $pkgdir/opt/lib32/usr/lib/
	cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
  
}
