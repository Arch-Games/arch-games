pkgname=name        
pkgver=ver
pkgrel=rel
pkgdesc="desc"
url="url"
arch=('i686' 'x86_64')
license=('GPL')
#groups
depends=('1st dep' '2nd dep')
makedepends=('1st dep' '2nd dep')
optdepends('1st dep (desc)' '2nd dep (desc)')
provides=('pkgname')
conflicts=('pkgname')
replaces=('pkgname')
#backup
options=('opt1' '!opt2')
install=('pkg.install')
source=(source1
		source2
		source3)
		
noextract=('source1')
