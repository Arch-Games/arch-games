# Contributor: Federico Boaretti <kingrebound gmail com>

pkgname=extremetuxracer
pkgver=0.4
pkgrel=1
pkgdesc="Open source racing game featuring Tux the Linux Penguin"
url="http://extremetuxracer.com/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('sdl' 'tcl')
source=(http://downloads.sourceforge.net/sourceforge/extremetuxracer/$pkgname-$pkgver.tar.gz
		extremetuxracer.desktop)
		
md5sums=('6830eb4e1ca7c5a541f286ded3853f9f' 
		 '388bfbac0790927ccc094ee023ed4afe')

build() {

	#Build and install the package
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$pkgdir install 

	#Install the .desktop and icon files
	install -d -m755 $startdir/pkg/usr/share/pixmaps $startdir/pkg/usr/share/applications
	install -D -m644 $startdir/src/$pkgname-$pkgver/data/textures/splash.png $startdir/pkg/usr/share/pixmaps/extremetuxracer.png 
 	install -D -m644 $startdir/extremetuxracer.desktop  $startdir/pkg/usr/share/applications/ 

}
        
