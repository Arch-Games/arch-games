#Contributor: ezzetabi <ezzetabi at gawab dot com>
pkgname=generally
pkgver=1.05
pkgrel=2
pkgdesc="GeneRally is a great, small racing game."
arch=(i686 x86_64)
url="http://generally.rscsites.org/"
license=('freeware')
makedepends=(unzip)
depends=()
[ "$CARCH" = i686   ] && depends=(wine)
[ "$CARCH" = x86_64 ] && depends=(bin32-wine)
options=(!strip)
install=
source=(generally generally_track_ed generally_res.c
  http://generally.rscsites.org/grfiles/generally105.zip)
noextract=(generally105.zip)
md5sums=('618308be7f92d61f88d70b61142d8781' 'e765a4793d9962c4d2968ebe73fa030b' '1b4e3c9be7a3d47559a0b12f49e456e4' '9f38044660bfffde2979654d6d639f3f')

build() {
  cd "$startdir/src"
  install -d -m 755 ../pkg/usr/share/generally ../pkg/usr/bin || return 1
  unzip -qqo generally105.zip -d ../pkg/usr/share/generally/ || return 1
  find ../pkg/usr/share/generally/ -type f -exec chmod 644 "{}" \; || return 1
  find ../pkg/usr/share/generally/ -type d -exec chmod 755 "{}" \; || return 1
  gcc -W -Wall -pedantic -o ../pkg/usr/bin/generally_res generally_res.c || return 1
  install -m 755 generally ../pkg/usr/bin/generally || return 1
  install -m 755 generally_track_ed ../pkg/usr/bin/generally_track_ed || return 1
}
# vim:set ts=2 sw=2 et:
