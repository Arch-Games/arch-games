pkgname=pyyaml-python
pkgver=3.08
pkgrel=1
pkgdesc="a YAML parser and emitter for Python."
arch=('any')
url="http://pyyaml.org"
source=(http://pyyaml.org/download/pyyaml/PyYAML-$pkgver.tar.gz)
license=('MIT')
md5sums=('a4163a2017fa57f448c66815511fa555')
depends=('python')
options=('!emptydirs')

build() {
  cd $srcdir/PyYAML-$pkgver
  python setup.py install --root=$pkgdir/

   install -D -m644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}


