# Contributor: fana-m <geminin@gmx.net>

pkgname=gigi-svn
pkgver=670
pkgrel=1
pkgdesc="A small, efficient, and feature-rich C++ GUI for OpenGL"
url="http://sourceforge.net/projects/gigi/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('boost>=1.36' 'mesa' 'devil-dev' 'freetype2')
makedepends=('subversion' 'scons')
provides=('gigi')
conflicts=('gigi')
source=()
md5sums=('')

_svntrunk=https://gigi.svn.sourceforge.net/svnroot/gigi/trunk/GG/
_svnmod=gigi

build() {

  #Grab the sources with svn
  cd $srcdir
  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver) || return 1
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod || return 1
  fi
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
  rm -r $srcdir/$_svnmod-build
  cp -r $srcdir/$_svnmod $srcdir/$_svnmod-build
  cd $srcdir/$_svnmod-build

  #Build and install the package
  scons configure
  scons prefix=/usr pkgconfigdir=/usr/lib/pkgconfig/ build_ogre_driver=0 || return 1
  scons install prefix=$pkgdir/usr pkgconfigdir=$pkgdir/usr/lib/pkgconfig/ 
  
  #Fix the symlinks
  rm $pkgdir/usr/lib/libGiGi.so $pkgdir/usr/lib/libGiGiSDL.so
  ln -s /usr/lib/libGiGi.so.0.6.0 $pkgdir/usr/lib/libGiGi.so 
  ln -s /usr/lib/libGiGiSDL.so.0.6.0 $pkgdir/usr/lib/libGiGiSDL.so 

}

# vim:set ts=2 sw=2 et:
