# Contributor: Fabio Volpe <volpefabio@gmail.com>
pkgname=ultimatestunts
pkgver=0.7.5.1
pkgrel=1
pkgdesc="UltimateStunts will be a remake of the famous DOS-game 'stunts'."
arch=('i686' 'x86_64')
url="http://www.ultimatestunts.nl"
license=('GPL')
depends=('openal' 'sdl' 'sdl_image' 'freealut')
source=(http://downloads.sourceforge.net/sourceforge/ultimatestunts/$pkgname-srcdata-${pkgver//./}.tar.gz \
	ultimatestunts.desktop \
	ultimatestunts.png)
md5sums=('e216bbbfc3d2a868be7e647aa79c6bca'
         '7190eaf6c2370b616ba5d4248b969fae'
         '8cca4091a1fa8a73a12813ac054f0c97')

build() {
  cd $startdir/src/$pkgname-srcdata-${pkgver//./}
  ./configure --prefix=/usr --sysconfdir=/etc
  make || return 1
  make sysconfdir=$startdir/pkg/etc prefix=$startdir/pkg/usr install
  mkdir -p $startdir/pkg/usr/share/applications
  cp $startdir/ultimatestunts.desktop $startdir/pkg/usr/share/applications
  mkdir -p $startdir/pkg/usr/share/pixmaps
  cp $startdir/ultimatestunts.png $startdir/pkg/usr/share/pixmaps
  find $startdir/pkg/usr/share/ultimatestunts -type d | xargs chmod 555
  find $startdir/pkg | xargs chown root:root
}
