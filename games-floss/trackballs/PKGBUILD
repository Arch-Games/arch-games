# Contributor: Giovanni Cucca <giovanni.cucca@gmail.com>

pkgname=trackballs
pkgver=1.1.4
pkgrel=2
pkgdesc="Simple game similar to the classical game Marble Madness on the Amiga in the 80's"
arch=('i686' 'x86_64')
license=('GPL')
url="http://trackballs.sourceforge.net/"
install=trackballs.install
depends=('guile>=1.8.1' 'sdl_ttf' 'sdl_image' 'sdl_mixer' 'mesa')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.gz \
		trackballs.desktop)
md5sums=('84e2e8bb68842a636da91673751279a0' 'dba47c0b52855b4e7021484783f68004')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${startdir}/pkg install
  install -m644 share/highScores $startdir/pkg/usr/share/trackballs/highScores.init
  mkdir -p $startdir/pkg/usr/share/applications
  install -m644 $startdir/src/trackballs.desktop \
                $startdir/pkg/usr/share/applications/
}
