pkgname=lib32-libsasl
pkgname32=libsasl
pkgver=2.1.23
pkgrel32=4
pkgrel=4
pkgdesc="Cyrus Simple Authentication Service Layer (SASL) library"
arch=('x86_64')
url="http://asg.web.cmu.edu/cyrus/download/"
depends=('lib32-glibc')
license=('custom')
groups=lib32
source=(ftp://ftp.archlinux.org/core/os/i686/${pkgname32}-${pkgver}-${pkgrel32}-i686.pkg.tar.xz)
md5sums=('203f3937c8af5a04f6fd267bf26d6795')

build() {
  install -d ${pkgdir}/opt/lib32/usr/lib
  cp -rPf ${srcdir}/usr/lib/*.so* ${pkgdir}/opt/lib32/usr/lib
}
