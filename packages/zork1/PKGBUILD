# Zork I adventure game

# Contributor: David Rosenstrauch <darose@darose.net>

pkgname=zork1
pkgver=1
pkgrel=7
pkgdesc="Zork I adventure game (for Infocom's z-code interpreter)"
url="http://www.csd.uwo.ca/Infocom/"
depends=(jzip)
source=(http://www.csd.uwo.ca/Infocom/Download/$pkgname.zip LICENSE)
md5sums=('f6dd915ea7315985536efb39154f3433' '961576a5d7de0363d40ccdb3f08512b3')
arch=('any')
license="custom"

build() {
#  cd $startdir/src/$pkgname-$pkgver
  cd $startdir/src

  gzip -c DATA/ZORK1.DAT > DATA/zork1.dat.gz
  install -D -m644 DATA/zork1.dat.gz $startdir/pkg/usr/share/zork/$pkgname/zork1.dat.gz
  echo "#!/bin/sh" > $pkgname
  echo jzip -m /usr/share/zork/$pkgname/zork1.dat.gz >> $pkgname
  install -D -m755 $pkgname $startdir/pkg/usr/bin/$pkgname
  install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/$pkgname/LICENSE
}
