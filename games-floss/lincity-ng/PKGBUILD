# $Id: PKGBUILD,v 1.9 2008/01/26 00:20:54 Snowman Exp $
# Maintainer: Eric Belanger <eric@archlinux.org>
# Contributor: tranquility <trankas@gmail.com>

pkgname=lincity-ng
pkgver=1.1.2
pkgrel=2
pkgdesc="A City Simulation Game. It is a polished and improved version of the classic LinCity game."
arch=('i686' 'x86_64')
url="http://lincity-ng.berlios.de/wiki/index.php/Main_Page"
license=('GPL' 'custom')
depends=('sdl_mixer' 'sdl_ttf' 'sdl_image' 'physfs' 'libxml2' 'sdl_gfx' 'gcc-libs' 'libgl')
makedepends=('ftjam' 'mesa')
source=(http://download.berlios.de/lincity-ng/$pkgname-$pkgver.tar.bz2 http://download.berlios.de/lincity-ng/lincity-ng-1.1.2-bugfix.zip)
sha1sums=('b2bd7f2e058ada133b452d9dddd8def0f2dbbaeb' '6bcbe4652a74448a6d6a1fff87c28166aedc780c')
md5sums=('3b4b67044230bdab64e7976e212cdd80' 'cb997d39bc41885908397e3514d20da1')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  jam || return 1
  jam -sprefix=$startdir/pkg/usr install
  install -m644 ../lincity-ng-1.1.2-bugfix/allgone.xml $startdir/pkg/usr/share/lincity-ng/gui/allgone.xml
  install -D -m644 COPYING-data.txt $startdir/pkg/usr/share/licenses/$pkgname/COPYING-data.txt
  install -D -m644 COPYING-fonts.txt $startdir/pkg/usr/share/licenses/$pkgname/COPYING-fonts.txt
}
