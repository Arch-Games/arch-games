pkgname=pong2
pkgver=0.1.3
pkgrel=1
pkgdesc="Networked, 3D clone of pong"
url="http://pong2.berlios.de/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('libgl' 'openssl' 'sdl_image')
source=(http://download.berlios.de/pong2/$pkgname-$pkgver.tar.bz2
        pong2.desktop)

md5sums=('b27c827a060c1d0aebb4d0df825fcada' 
         '28167ea1175ffcf297583c29f7df66a1')
     
build() {

  #Build and install the package
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make prefix=$pkgdir/usr install
  
  #Install the .desktop and icon files
  install -D -m644 icon.png $pkgdir/usr/share/pixmaps/pong2.png
  install -D -m644 $srcdir/pong2.desktop $pkgdir/usr/share/applications/Pong2.desktop
  
}

# vim:set ts=2 sw=2 et:
