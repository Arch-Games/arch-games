pkgname=python-rabbyt
pkgver=0.7
pkgrel=1
pkgdesc="sprite library for Python with game development in mind"
url="http://matthewmarshall.org/projects/rabbyt/"
license="LGPL"
depends=('python' 'setuptools')
makedepends=('pyrex')
source=("http://cheeseshop.python.org/packages/source/R/Rabbyt/Rabbyt-$pkgver.tar.gz")
md5sums=('0eebcf062bfec08305b2228099dddfd3')
arch=('i686' 'x86_64')

build() {
	cd $srcdir/Rabbyt-$pkgver
	python setup.py install --root $pkgdir
}
