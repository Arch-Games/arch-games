# Contributor: Michal Malek <michalm@jabster.pl>

pkgname=bjs
pkgver=0.1.2
pkgrel=3
pkgdesc="3D multiplayer tank battle game"
arch=('i686' 'x86_64')
url="http://bjs.sourceforge.net/"
license=('GPL')
depends=('ode' 'sdl' 'sdl_image' 'sdl_mixer' 'sdl_ttf' 'sdl_gfx' 'openal' 'omniorb' 'cegui')
makedepends=('imake')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver-src.tar.gz bjs bjs_server bjs.desktop bjs.png)
md5sums=('4f1390d2fe3a94b8a87c06aea4bed1e9'
	'bf1375be600a5f40a73b9449a359356b'
	'bc6236ce5a00115a7f8e1ee8e1d0ef79'
	'3661ea4d8f543c7acc523212f4cfa918'
	'0112598e776299f903b885bb87b02824')

build()
{
  cd ${startdir}/src/$pkgname-$pkgver-src
  make depend || return 1
  make || return 1
  mkdir -p ${startdir}/pkg/usr/bin
  mkdir -p ${startdir}/pkg/usr/share/${pkgname}
  mkdir -p ${startdir}/pkg/usr/share/applications
  mkdir -p ${startdir}/pkg/usr/share/pixmaps
  install -m755 bjs ${startdir}/pkg/usr/share/${pkgname}
  install -m755 bjs_server ${startdir}/pkg/usr/share/${pkgname}
  install -m755 ${startdir}/src/bjs ${startdir}/pkg/usr/bin
  install -m755 ${startdir}/src/bjs_server ${startdir}/pkg/usr/bin
  install -m644 ${startdir}/src/bjs.desktop ${startdir}/pkg/usr/share/applications
  install -m644 ${startdir}/src/bjs.png ${startdir}/pkg/usr/share/pixmaps
  cp -r config ${startdir}/pkg/usr/share/${pkgname}
  cp -r data ${startdir}/pkg/usr/share/${pkgname}
}
