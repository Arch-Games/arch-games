# Contributor: DaNiMoTh <jjdanimoth@gmail.com>

pkgname=knights 
pkgver=0.6.4beta
pkgrel=1 
pkgdesc="Chess game for KDE, can connect to engines and FICS" 
url="http://knights.sourceforge.net" 
depends=('kdelibs>=3.3.0' 'kdebase') 
license=('GPL')
arch=('i686')
source=(http://downloads.sourceforge.net/sourceforge/knights/knights-0.6.4-beta.tar.gz) 
md5sums=('06fc733571b573638fb85d74af8ef9a3')

build() 
{ 
  cd $srcdir/$pkgname
  sed -ie '46s/;//' knights/audio.h 
  ./configure --prefix=/opt/kde 
  make || return 1 
  make prefix=$pkgdir/usr install 
} 

