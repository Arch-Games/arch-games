pkgname=python-rabbyt
pkgver=0.8.2
pkgrel=1
pkgdesc="sprite library for Python with game development in mind, a version for snoballz"
url="http://matthewmarshall.org/projects/rabbyt/"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('python' 'setuptools')
makedepends=('pyrex')
provides=('python-rabbyt')
conflicts=('python-rabbyt')
source=("http://cheeseshop.python.org/packages/source/R/Rabbyt/Rabbyt-$pkgver.tar.gz")
md5sums=('b8a90d1793ce37fdac47f54aa08a94f4')


build() {

  #Install the package
  cd $srcdir/Rabbyt-$pkgver
  python setup.py install --root $pkgdir || return 1
  
}

