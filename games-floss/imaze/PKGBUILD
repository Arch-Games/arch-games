# $Id: PKGBUILD,v 1.8 2004/01/29 13:22:41 dale Exp $
# Maintainer: sullivanva <sullivanva@gmail.com>

pkgname=imaze
pkgver=1.4
pkgrel=2
arch="i686 x86_64"
pkgdesc="A 3D TCP/IP-network-game which is a Smiley shootout under X11/OpenMotif. "

depends=('lesstif')
url=http://home.tu-clausthal.de/student/iMaze/
source=( http://home.tu-clausthal.de/student/iMaze/files/$pkgname-$pkgver.tar.gz )
md5sums=('359cd8e072bfd7e51acafc1f106b9ea0')

build() {
  cd $srcdir/$pkgname-$pkgver/source
  patch -p1 <../../../imaze-1.4.dif  Makefile.in
  ./configure
  make || return 1
  make install
  cd $srcdir/$pkgname-$pkgver/
  /bin/install -d -m 755 $pkgdir/usr/games/imaze
  /bin/install -s -m 755 imaze imazesrv ninja genlab xlabed imazestat $pkgdir/usr/games/imaze
  /bin/cp -a labs $pkgdir/usr/games/imaze
  /bin/cp -a sounds $pkgdir/usr/games/imaze
  /bin/install -d -m 755 $pkgdir/usr/X11R6/man
  /bin/cp -a man6/ $pkgdir/usr/X11R6/man
}
