pkgname=netpanzer
pkgver=0.8.2
pkgrel=1
pkgdesc="An Online Multiplayer Tactical Warfare Game"
arch=('i686' 'x86_64')
url="http://netpanzer.berlios.de/"
license="GPL"
depends=('physfs' 'sdl' 'sdl_mixer')
makedepends=('ftjam')
source=(http://download.berlios.de/netpanzer/$pkgname-$pkgver.tar.bz2)
md5sums=('3f446403ac7e72ed0ff9e093517c83d3')

build() {
  cd $srcdir/$pkgname-$pkgver/

  ./configure --prefix=/usr --without-wx-config #--disable-debug 
  jam || return 1
  jam -sprefix=$pkgdir/usr install
}
