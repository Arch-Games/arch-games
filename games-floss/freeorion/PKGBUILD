# Maintainer : fana-m <geminin@gmx.net>

pkgname=freeorion
pkgver=rev2561
pkgrel=1
pkgdesc="Free Clone of Master of Orion. Static linked version."
arch=(i686)
url="http://freeorion.org/forum/viewtopic.php?f=9&p=28071#p28071"
license=('GPL')
depends=('boost' 'fmod' 'sdl' 'openal' 'libogg' 'libvorbis' 'python24')
provides=('freeorion')
install=$pkgname.install
source=(http://psitronic.de/div/FO/latest.tar.gz freeorion.png freeorion.desktop)
md5sums=('64acb8674a06be34bf92bd0acb5210ab' '7064e5b16d222322ce90cd4598eec64e' '2cb863f94d76c7d2f53a9d393b2b2660')

build() {
	mkdir -p $startdir/pkg/opt/
	mkdir -p $startdir/pkg/usr/bin
	mkdir -p $startdir/pkg/usr/share/{applications,pixmaps}
	cd $startdir/src
	tar xfz latest.tar.gz
#	chown -R root ./* && chmod -R 644 ./* && chmod 755 ./freeorion/freeori*
	cp -R freeorion $startdir/pkg/opt/
	cp freeorion.png $startdir/pkg/usr/share/pixmaps/
	cp freeorion.desktop $startdir/pkg/usr/share/applications/
	cd $startdir/pkg/usr/bin
	echo "#!/bin/bash" >> freeorion && echo "/opt/freeorion/freeorion" >> freeorion && chmod +x freeorion
}