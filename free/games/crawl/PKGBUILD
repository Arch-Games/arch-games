# Contributor: Daenyth

pkgname=crawl
pkgver=4.0.0beta26
pkgrel=5
arch=('i686' 'x86_64')
pkgdesc="Linley's Dungeon Crawl roguelike"
url="http://www.dungeoncrawl.org/"
license=('custom')
depends=('ncurses')
source=('ftp://ftp.dungeoncrawl.org/dev/4.0.x/src/dc400b26-src.tbz2' \
	'crawlpatch.diff' 'crawl')
md5sums=('807810185ff93f06bd4e169067644d8f' 'c9e5d02c1ebeb1455987765ec5fad183' \
         '9fb0d3724bb950b7860aed610953966d')

build() {
  cd $startdir/src/dc400b26-src

  patch -p1 -i ../crawlpatch.diff

  cd source && make all

  cd $startdir/src/dc400b26-src

  install -m 755 -D $startdir/src/crawl $startdir/pkg/usr/bin/crawl
  install -m 755 -D source/crawl $startdir/pkg/usr/share/crawl/crawl
  install -m 644 -D docs/crawl.6 $startdir/pkg/usr/man/man6/crawl.6
  install -m 777 -d $startdir/pkg/usr/share/crawl/save

  install -m 644 -D licence.txt $startdir/pkg/usr/share/licenses/crawl/licence.txt
}
