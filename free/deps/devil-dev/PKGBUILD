# Contributor: damir <damir@archlinux.org>
# Contributor: TheHoff <forums>

pkgname=devil-dev
pkgver=1.6.8
pkgrel=1
pkgdesc="Library for reading several different image formats"
url="http://openil.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('sdl' 'libpng' 'zlib' 'libjpeg' 'libtiff' 'libmng')
makedepends=('bash')
provides=('devil')
conflicts=('devil')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/openil/DevIL-$pkgver-rc2.tar.gz 
		devil.patch)
		
md5sums=('9d815c8637adb6fb6c25c38dc178aca2'
	 	 'b71f41656843f01874a12924d1d60572')

build()
{

	#Patch build and install devil
	cd $srcdir/DevIL-$pkgver
	patch -p1 -i ../devil.patch
	./configure --prefix=/usr --with-gnu-ld --disable-allegro
	make || return 1
	make prefix=$pkgdir/usr install
   
}
