# Contributor: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=openlierox
pkgver=0.57_beta8
pkgrel=3
pkgdesc="A real-time, excessive worms-clone"
arch=('i686' 'x86_64')
url="http://openlierox.sourceforge.net/"
license=('LGPL2')
depends=('gcc-libs' 'gd' 'hawknl' 'libxml2' 'sdl_image' 'sdl_mixer' 'libzip')
source=(http://downloads.sourceforge.net/sourceforge/openlierox/OpenLieroX_$pkgver.src.tar.bz2 openlierox.desktop)
md5sums=('f83b5e8eec8dae77f04280420c848807' '136be76151864d154051455d75dc813e')

build() {
	cd $startdir/src/OpenLieroX
	./compile.sh || return 1
	mkdir -p $pkgdir/usr/{bin,share/{OpenLieroX,applications}}
	cp $srcdir/OpenLieroX/bin/openlierox $pkgdir/usr/bin
	cp -r $srcdir/OpenLieroX/share/gamedir/* $pkgdir/usr/share/OpenLieroX/
	cp $startdir/openlierox.desktop $pkgdir/usr/share/applications
}
