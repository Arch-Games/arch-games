# Maintainer: Alexander Baldeck <alexander@archlinux.org>
pkgname=dark-oberon-cvs
pkgver=20081011
pkgrel=2
arch=('i686' 'x86_64')
pkgdesc="An open source real-time strategy game similar to Warcraft II"
url="http://dark-oberon.sourceforge.net"
depends=('glfw')
makedepends=('cvs')
source=(dark-oberon.sh)
md5sums=('b1401ca7e00e5927dc89438b5d37fd74')
license=('GPL')

_cvsroot=":pserver:anonymous@dark-oberon.cvs.sourceforge.net:/cvsroot"
_cvsmod="dark-oberon"
		 
build() {
	
	cd $srcdir
	
	if [ -d $_cvsmod/CVS ]; then
		cd $_cvsmod
		cvs -z3 update -d || return 1
	else
		cvs -z3 -d $_cvsroot/$_cvsmod co -f $_cvsmod || return 1
		cd dark-oberon 
	fi
	
	
	export DARK_OBERON_HOME=$srcdir/dark-oberon
	cd $srcdir/dark-oberon/src
	sh create_makefile.sh || return 1
	cd ../
	sed "s|LIBRARIES = |LIBRARIES = -pthread -lglfw -lGL -lX11 -lXxf86vm -lGLU -lXext |g" -i $srcdir/dark-oberon/src/Makefile
	sed "s|CPPFLAGS = -g -Wall -O|CPPFLAGS = ${CXXFLAGS}|g" -i $srcdir/dark-oberon/src/Makefile
	sed "s|-DDATA_DIR='\"\"'|-DDATA_DIR='\"/opt/dark-oberon/\"'|g" -i $srcdir/dark-oberon/src/Makefile
	make || return 1

	mkdir -p $pkgdir/opt/dark-oberon
	for src in dark-oberon dat docs libs maps races schemes; do
    	cp -a $src $pkgdir/opt/dark-oberon
	done
	chown -R root:root $pkgdir/*
	chmod -R a+r  $pkgdir/*

	mkdir -p $pkgdir/etc/profile.d
	install -c $srcdir/dark-oberon.sh $pkgdir/etc/profile.d/dark-oberon.sh
  
}

