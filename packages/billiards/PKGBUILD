pkgname=billiards
pkgver=0.2.2
pkgrel=1
pkgdesc="A free cue sports simulator aiming for physical accuracy and simplicity"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/$pkgname/"
license=('GPL3')
depends=('lua>=5.1' 'ode-compat' 'libpng' 'openal' 'mesa')
makedepends=('pkgconfig>=0.9')
install=$pkgname.install
source=(http://download.savannah.gnu.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('1e8610eeb9a8c524c5096cf0329b6257')

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr \
	LUA_CFLAGS="$(pkg-config --cflags lua)" \
	LUA_LIBS="$(pkg-config --libs lua)" \
	LUAC=/usr/bin/luac

  make || return 1
  make DESTDIR="$pkgdir" install

  rm -f "$pkgdir"/usr/share/info/dir
}

# vim:set ts=2 sw=2 et:
md5sums=('2a9ccf695e0c4819baed78d0e28f5d64')
