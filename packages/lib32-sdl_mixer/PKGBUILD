pkgname=lib32-sdl_mixer
pkgver=1.2.11
pkgrel=1
pkgdesc="A simple multi-channel audio mixer"
url="http://www.libsdl.org/projects/SDL_mixer/"
arch=('x86_64')
license=('LGPL')
groups=('lib32')
depends=('lib32-sdl' 'lib32-libvorbis' 'lib32-libmikmod')
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)

build() {

  mkdir -p $pkgdir/opt/lib32/usr/lib/
  cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
  
}

# vim:set ts=2 sw=2 et:
md5sums=('3ce2365b1086697f995b37a91ea67b6d')
