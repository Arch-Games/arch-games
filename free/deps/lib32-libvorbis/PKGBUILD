pkgname=lib32-libvorbis
pkgver=1.2.0
pkgrel=1
pkgdesc="Vorbis codec library"
url="http://www.xiph.org/ogg/vorbis/"
arch=('x86_64')
license=('custom')
groups=('lib32')
depends=('lib32-libogg')
source=(ftp://ftp.archlinux.org/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}.pkg.tar.gz)
md5sums=('410168e98c3ff5f11a25795a554f6cf7')

build() {

	mkdir -p $pkgdir/opt/lib32/usr/lib/
	cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
  
}
