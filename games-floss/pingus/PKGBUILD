# $Id: PKGBUILD,v 1.5 2007/11/02 05:35:01 Snowman Exp $
# Maintainer: Eric Belanger <eric@archlinux.org>

pkgname=pingus
pkgver=0.7.2
pkgrel=1
pkgdesc="Pingus is a Lemmings clone, i.e. a level-based puzzle game."
arch=('i686' 'x86_64')
url="http://pingus.seul.org"
license=('GPL')
depends=('gcc-libs' 'sdl_image' 'sdl_mixer' 'boost')
makedepends=('scons')
source=(http://pingus.seul.org/files/$pkgname-$pkgver.tar.bz2 pingus.desktop)
sha1sums=('1cd3a1d924337a5ee2e0ee387c0513f85d47cdb0' 'f35649f3b0b2bfcb01ce75085cf719dcaa609a54')
md5sums=('88756802d483f922d0910a14cd26a951' 'b94efaa6e2de959de7fdb50cfc7dbdea')

build() {
  cd $startdir/src/$pkgname-$pkgver
  scons prefix=/usr
  ./install.sh $startdir/pkg/usr
  install -D -m644 $startdir/src/pingus.desktop $startdir/pkg/usr/share/applications/pingus.desktop
}
