pkgname=lib32-libogg
pkgver=1.1.3
pkgrel=2
pkgdesc="Ogg bitstream and framing library"
url="http://www.xiph.org/"
arch=('x86_64')
license=('GPL')
groups=('lib32')
depends=('lib32-glibc')
source=(ftp://mirror.yandex.ru/archlinux/extra/os/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.gz)
md5sums=('9774d7b49f831b1384f8b3c1421a4ca5')

build() {

  mkdir -p $pkgdir/opt/lib32/usr/lib/
  cp -R $srcdir/usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
  
}

