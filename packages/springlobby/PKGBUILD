# Maintainer: DuGi <dugi@irc.pl>

pkgname=springlobby
pkgver=0.85
pkgrel=1
pkgdesc="A free cross-platform lobby client for the Spring RTS project."
arch=('i686' 'x86_64')
url="http://springlobby.info/"
license=('GPL2')
depends=('wxgtk' 'libtorrent-rasterbar' )
optdepends=('sdl' 'sdl_sound' 'sdl_mixer' 'curl') 
makedepends=('asio' 'cmake')
source=(http://www.springlobby.info/tarballs/${pkgname}-${pkgver}.tar.bz2 springlobby.desktop springlobby.png)

build() {
  cd $srcdir/${pkgname}-$pkgver

  cp $srcdir/${pkgname}-$pkgver/tools/test-susynclib.awk $srcdir/${pkgname}-$pkgver/tools/test-susynclib.awk.bak || return 1
  sed -e 's/\/usr\/bin\/awk/\/bin\/awk/g' $srcdir/${pkgname}-$pkgver/tools/test-susynclib.awk.bak>$srcdir/${pkgname}-$pkgver/tools/test-susynclib.awk
  cmake . \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DOPTION_SOUND=false || return 1
  make && make DESTDIR=$pkgdir install || return 1
  
  install -m755 -d $pkgdir/usr/share/applications
  install -m644 $srcdir/springlobby.desktop $pkgdir/usr/share/applications

  install -m755 -d -p $pkgdir/usr/share/pixmaps
  install -m644 $srcdir/springlobby.png $pkgdir/usr/share/pixmaps
}
md5sums=('6f89baf43c5b211a36e03cdef3b959d1'
         '45f8b59d033931d02e734fe3bd7777dd'
         '1f388187539aeb0358b51995e26ed890')
